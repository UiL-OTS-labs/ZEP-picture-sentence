

record TestItem {
    int     id;         // The id of the item.
    string  fn1;        // The filename of the first picture
    string  fn2;        // The filename of the second picture
    string  s1;         // The first sentence
    string  s2;         // The second sentence
    string  correct1;   // The answer of the upper question
    string  correct2;   // The answer of the lower question
};


TestItem[..] prac_items;
TestItem[..] test_items;
TestItem[..] test_items_bl1;
TestItem[..] test_items_bl2;

int load_stimuli()
{
    println("Loading stimuli.");
    string fn_prac = stimuli_dir() + "prac_items.csv";
    string fn_test = stimuli_dir() + "test_items.csv";

    int result = prac_items.load(fn_prac, true, 0);
    if (result != OK)
        return result;

    result =  test_items.load(fn_test, true, 0);
    return result;
}

